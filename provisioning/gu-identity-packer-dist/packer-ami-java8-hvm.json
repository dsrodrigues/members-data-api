{
  "variables": {
    "aws_access_key": "{{env `AWS_ACCESS_KEY`}}",
    "aws_secret_key": "{{env `AWS_SECRET_KEY`}}"
  },
  "builders": [
    {
      "type": "amazon-ebs",
      "ami_name": "{{isotime \"20060102-1504\"}}-identity-java8-hvm",
      "source_ami": "ami-7c4b0a0b",
      "region": "eu-west-1",
      "vpc_id": "vpc-9f1fb9fa",
      "subnet_id": "subnet-a774fdc2",
      "instance_type": "t2.micro",
      "ssh_username": "ubuntu",
      "ssh_timeout": "3m",
      "access_key": "{{user `aws_access_key`}}",
      "secret_key": "{{user `aws_secret_key`}}",
      "associate_public_ip_address": true,
      "tags": {
        "OS_Version": "Ubuntu",
        "Virtualization": "hvm",
        "Name": "{{isotime \"20060102-1504\"}}-identity-hvm",
        "Stack": "identity",
        "Java": "8"
      }
    }
  ],

  "provisioners" : [

    { "type": "shell",
      "inline": [
        "sleep 20s",
        "sudo mkdir -p /etc/gu/",
        "sudo add-apt-repository -y ppa:openjdk-r/ppa",
        "sudo apt-get -y update",
        "sudo apt-get -y install language-pack-en openjdk-8-jre-headless libconfuse-common libconfuse0 libaprutil1 libapr1 python-pip",
        "sudo apt-get -y upgrade",
        "sudo pip install awscli",
        "sudo aws s3 cp s3://gu-identity-dist/set-env.sh /set-env.sh"
      ],
      "only": [ "amazon-ebs" ]
    }
  ]
}